*.ps1x            text eol=crlf
*.ps1xml          text eol=crlf
*.psd1            text eol=crlf
*.psm1            text eol=crlf
*.psrc            text eol=crlf
*.pssc            text eol=crlf
# Swift
*.pbxproj         merge=union
*.swift           text diff=swift
# Web
*.coffee          text
*.css             text diff=css
*.htm             text diff=html
*.html            text diff=html
*.inc             text
